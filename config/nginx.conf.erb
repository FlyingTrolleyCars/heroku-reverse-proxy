worker_processes <%= ENV['NGINX_WORKERS'] || 2 %>;
error_log /dev/stdout info;

daemon off;

events {
	use epoll;
	accept_mutex on;
	worker_connections 256;
}

http {
	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	server_tokens off;
	proxy_cache_path /tmp/nginx-cache levels=1:2 keys_zone=cdn:100m max_size=25g inactive=3m use_temp_path=off;

	server {
		listen <%= ENV["PORT"] %>;

		location / {
			proxy_set_header   HTTP_CF_CONNECTING_IP        $remote_addr;
			proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
			proxy_set_header   X-NginX-Proxy    true;
			proxy_pass <%= ENV["UPSTREAM_SERVER"] %>;
			proxy_http_version 1.1;
			proxy_buffering off;
			add_header \'X-Cache-Status\' "$upstream_cache_status" always;

		}

		# This forces HTTPS but we don't want that, we'll stay on port 80 http
		# if ($http_x_forwarded_proto != "https") {
		#   rewrite ^(.*)$ https://$host$1 permanent;
		# }
	}
}
